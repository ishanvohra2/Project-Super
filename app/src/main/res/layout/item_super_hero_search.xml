<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/red_transparent"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_pic_image_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:src="@drawable/ironman"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Iron Man"
            app:layout_constraintTop_toBottomOf="@id/profile_pic_image_view"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            android:fontFamily="@font/heading_font"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_textview">

            <LinearLayout
                android:id="@+id/strength_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Strength"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="12dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/lexend_exa"/>

                <TextView
                    android:id="@+id/strength_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="92"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/yellow"
                    android:textSize="14sp"
                    android:fontFamily="@font/lexend_exa"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/power_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Power"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="12dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/lexend_exa"/>

                <TextView
                    android:id="@+id/power_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="92"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/yellow"
                    android:textSize="14sp"
                    android:fontFamily="@font/lexend_exa"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/speed_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Speed"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="12dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/lexend_exa"/>

                <TextView
                    android:id="@+id/speed_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="92"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/yellow"
                    android:textSize="14sp"
                    android:fontFamily="@font/lexend_exa"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>